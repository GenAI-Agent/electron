{
  "name": "supervisor-agent-frontend",
  "version": "1.0.0",
  "description": "Supervisor Agent Electron Frontend",
  "license": "MIT",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"bun dev:next\" \"bun dev:electron\"",
    "dev:next": "next dev --port 4081",
    "dev:electron": "wait-on http://localhost:4081 && cross-env NODE_ENV=development electron .",
    "build": "next build",
    "build:electron": "bun run build && electron-builder",
    "start": "bun run build && electron .",
    "lint": "next lint"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.12",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.0.0",
    "dotenv": "^17.2.1",
    "electron": "^33.0.0",
    "lucide-react": "^0.263.1",
    "next": "^15.0.0",
    "postcss": "^8.5.6",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "react-markdown": "^10.1.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "concurrently": "^9.0.0",
    "cross-env": "^10.0.0",
    "electron-builder": "^25.0.0",
    "eslint": "^9.0.0",
    "eslint-config-next": "^15.0.0",
    "typescript": "^5.6.0",
    "wait-on": "^8.0.0",
    "tailwindcss": "^4.1.12",
    "autoprefixer": "^10.4.16"
  },
  "build": {
    "appId": "com.supervisor-agent.app",
    "productName": "Supervisor Agent",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "electron/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
