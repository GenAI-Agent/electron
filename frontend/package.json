{
  "name": "supervisor-agent-frontend",
  "version": "1.0.0",
  "description": "Supervisor Agent Electron Frontend",
  "license": "MIT",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"yarn dev:next\" \"yarn dev:electron\"",
    "dev:next": "next dev",
    "dev:electron": "wait-on http://localhost:3000 && cross-env NODE_ENV=development electron .",
    "build": "next build",
    "build:electron": "yarn build && electron-builder",
    "start": "yarn build && electron .",
    "lint": "next lint"
  },
  "dependencies": {
    "@emotion/react": "^11.13.0",
    "@emotion/styled": "^11.13.0",
    "@mui/icons-material": "^6.1.0",
    "@mui/material": "^6.1.0",
    "electron": "^33.0.0",
    "next": "^15.0.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "concurrently": "^9.0.0",
    "cross-env": "^10.0.0",
    "electron-builder": "^25.0.0",
    "eslint": "^9.0.0",
    "eslint-config-next": "^15.0.0",
    "typescript": "^5.6.0",
    "wait-on": "^8.0.0"
  },
  "build": {
    "appId": "com.supervisor-agent.app",
    "productName": "Supervisor Agent",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "electron/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
